<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="45dp"
    android:minHeight="45dp">
    <TextView
        android:id="@+id/download_name"
        android:paddingLeft="?android:attr/listPreferredItemPaddingLeft"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:text="Divergent.2014.FRENCH.DVDrip.blousondsdsdsds"
        android:layout_alignParentLeft="true"
        android:layout_toLeftOf="@+id/download_percent_done"
        android:gravity="center_vertical"
        android:singleLine="true"
        android:paddingRight="3dp"/>
    <TextView
        android:id="@+id/download_download_rate"
        android:paddingLeft="?android:attr/listPreferredItemPaddingLeft"
        android:layout_width="100dp"
        android:layout_height="15dp"
        android:text="down:"
        android:textSize="10sp"
        android:paddingRight="3dp"
        android:layout_below="@+id/download_name"
        android:textColor="#ffb0afb2"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/download_upload_rate"
        android:layout_width="100dp"
        android:layout_height="15dp"
        android:text="up:"
        android:textSize="10sp"
        android:paddingLeft="3dp"
        android:paddingRight="3dp"
        android:layout_below="@+id/download_name"
        android:layout_toRightOf="@+id/download_download_rate"
        android:layout_toLeftOf="@+id/download_percent_done"
        android:textColor="#ffb0afb2"
        android:textStyle="bold"/>
    <ProgressBar
        android:id="@+id/download_percent_done"
        android:paddingRight="?android:attr/listPreferredItemPaddingRight"
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:layout_width="100dp"
        android:layout_height="27dp"
        android:layout_marginTop="3dp"
        android:layout_alignParentRight="true"/>
    <TextView
        android:id="@+id/download_size"
        android:layout_width="100dp"
        android:layout_height="15dp"
        android:text="size:"
        android:textSize="10sp"
        android:paddingLeft="3dp"
        android:paddingRight="3dp"
        android:layout_below="@+id/download_percent_done"
        android:layout_toRightOf="@+id/download_upload_rate"
        android:textColor="#ffb0afb2"
        android:textStyle="bold"/>



</RelativeLayout>