<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="45dp"
    android:layout_width="match_parent">
    <TextView
        android:id="@id/torrent_title"
        android:layout_width="0dp"
        android:layout_alignParentLeft="true"
        android:layout_height="fill_parent"
        android:textSize="12sp"
        android:text="Two and a Half Men S11E22 Two and a Half Men S11E22 Two and a Half Men S11E22"
        android:gravity="fill_horizontal"/>
    <ImageView
        android:id="@id/download_icon"
        android:layout_width="100dp"
        android:layout_height="31dp"
        android:layout_toRightOf="@id/torrent_title"
        android:layout_alignParentRight="true"
        android:src="@drawable/ic_action_download"/>
    <TextView
        android:id="@id/torrent_size"
        android:layout_width="100dp"
        android:layout_height="14dp"
        android:gravity="center_horizontal"
        android:layout_toRightOf="@id/torrent_title"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/download_icon"
        android:textSize="11sp"
        android:text="183.89 MiB"
        android:textStyle="italic"
        android:textColor="#FA8F02"/>
</RelativeLayout>

